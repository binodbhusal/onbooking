<div class="col-span-8 overflow-hidden rounded-xl sm:px-8 pb-10">
      <div class="pt-4" data-modal-target="btnClose">
        <h1 class="py-2 text-xl font-semibold text-gray-700">Search Property</h1>
      </div>
      <hr class="mt-3" />

      <%= form_with(
      url: properties_search_index_path, 
      method: :get, 
      local: true, 
      data: {
        controller: "property-search",
        "default-checkin-date": "#{Date.tomorrow.to_formatted_s(:utc_short_date)}",
        "default-checkout-date": "#{(Date.tomorrow + 1.day).to_formatted_s(:utc_short_date)}",
      },
     
      html: { multipart: true }
      ) do |f| 
        
        %>
        <div class="space-y-1">
        <div>
          
          <div class="flex flex-col space-y-6 px-4 py-6 sm:px-10">
          <div class="grid lg:grid-cols-1 gap-3">
            <div class="mt-3">
            <%= f.text_field :city, placeholder:"City", class:"w-full rounded-md border border-gray-300 py-2 px-2  outline-none ring-blue-600 focus:ring-1"%>
            <div>
           
            <div class="mt-6">
            <%= f.country_select :country_code,  { prompt: "Select Country" , priority_countries: ["PT", "US", "CA"],sort_provided: false}, class:"w-full rounded-md border border-gray-300 py-2 px-2 outline-none ring-blue-600 focus:ring-1 text-gray-500"%>
            </div>
            <div  class="mt-6">
            <%= f.text_field :checkin_date, data: {"property-search-target": "checkin"},required: true, placeholder:"Checkin date", class:"w-full rounded-md border border-gray-300 py-2 px-2  outline-none ring-blue-600 focus:ring-1"%>
            </div>
            <div class="mt-6">
            <%= f.text_field :checkout_date, data: {"property-search-target": "checkout"}, required:true, placeholder:"Checkout date", class:"w-full rounded-md border border-gray-300 py-2 px-2  outline-none ring-blue-600 focus:ring-1" %>
            </div>

            <div class="flex justify-end">

            <%= f.submit "Search", class:"mt-4  rounded-lg bg-rose-500 px-10 py-2 text-white"%>
            </div>
           
          </div>
       
        
        </div>
  <% end %>
      
      </div>

