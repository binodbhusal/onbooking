<div class="col-span-8 overflow-hidden rounded-xl sm:bg-gray-50 sm:px-8 sm:shadow pb-10">
      <div class="pt-4" >

      </div>
      <div class="ml-4 mt-2 flex-shrink-0 py-5 px-5 rounded-lg w-full flex justify-between">
      <h1 class=" text-xl font-semibold">Your Property</h1>
      <%= link_to "Create new property", new_host_property_path, class:"bg-indigo-600 hover:bg-indigo-700 py-1 px-3 rounded-lg text-gray-100"%>
      </div>
      <div class= "bg-white shadow overflow-hidden sm:rounded-md">
      <ul role = "list" class="divide-y divide-gray-200">
      <% @properties.each do |property| %>
            <li>
            <%= link_to property_path(property), class:"block hover:bg-gray-50" do %>
                  <div class="flex items-center px-4 py-4 sm:px-6">
                  <div class="min-w-0 flex-1 flex items-center">
                  <div class="flex-shrink-0">
                  <%= image_tag property.images.first.present? ? property.images.first : "", class:"h-12 w-12 rounded-full" %>
                  </div>
                  <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
                  <div>
                  <p class="text-base font-medium text-indigo-600 truncate"><%=property.name.capitalize %></p>
                  <p class="text-sm mt-1 flex items-center text-gray-500"><%= property.headline%>
                  </div>
                  <div class="hidden md:block">
                  <div>
                  <p class="text-sm text-gray-900">
                  Created on
                  <time><%=property.created_at.to_formatted_s(:utc_short_date) %>
                  </p>
                  <p class="mt-1 flex items-center text-sm text-gray-500">
                 <%=heroicon  "check-circle", options:{class:"h-5 w-5 text-green-700"}%>
                 <%= property.reservations.future_reservations.size%> Active Reservations 
                 </p>
                  </div>
                  </div>
                  </div>
                  <%=heroicon  "chevron-right", options:{class:"h-5 w-5 text-gray-700"}%>
                  </div>
                  </div>
            <% end %>
            </li>
      <% end %>
      </ul>

      </div>
      </div>

