      <ul class="max-h-0  flex-col overflow-hidden rounded-b-lg shadow-md transition-all duration-300 peer-checked:max-h-56 peer-checked:py-3">
     
      <li>
      <%= link_to "#", class: "cursor-pointer px-3 py-2 text-sm text-slate-600 hover:bg-blue-700" do %>
        Properties
      <% end %>
    </li>
      
        <li class="cursor-pointer px-3 py-2 text-sm text-slate-600 hover:bg-blue-700 hover:text-white">Reservation/Payments</li>
      </ul>
    </div>
<!-- large screen -->
    <div class="pro-side col-span-2 hidden sm:block">
    <ul>

        <li>
        <%= link_to host_dashboard_path(current_user), class: "text-gray-700 flex items-center gap-1 mt-5 cursor-pointer border-l-2 border-transparent px-2  font-semibold transition hover:border-l-[#ff395c] hover:bg-gray-100 py-2 #{'text-rose-500 bg-gray-100' if controller_name=='dashboard'}" do %>
         <%= heroicon "home", options: {class: "w-6 h-6 text-gray-400 #{'text-rose-500' if controller_name=='dashboard'}"} %>
         <span>Properties</span>
          <% end %>
          </li>
     
      <%= link_to host_payments_path, class: "text-gray-700 flex items-center gap-1 mt-5 cursor-pointer border-l-2 border-transparent px-2 py-2 font-semibold transition hover:border-l-rose-500 hover:bg-gray-100 #{'bg-gray-100 text-rose-500' if controller_name=="payments"}" do %>
        <%= heroicon "rectangle-stack", options: {class: "w-6 h-5 text-gray-400 #{'bg-gray-100 text-rose-500' if controller_name=="payments"}"} %>
          <span>Reservations & Payments</span>
      <% end %>
