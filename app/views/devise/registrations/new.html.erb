                  <h2 class="w-full flex text-2xl text-gray-700 justify-center mt-3">Register to Sign up</h2>
               </div>
               <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="mb-6">
                <%= f.label :email, class:"sr-only"%><br />
                        <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email", type:"email", class: "w-full px-5 py-3 text-base bg-transparent border rounded-md outline-none border-stroke text-body-color dark:text-white dark:border-dark-3 focus:border-primary focus-visible:shadow-none" %>

                  </div>
            <div class="mb-6">
                    
                <%= f.label :password, class:"sr-only" %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", type:"password", class: "w-full px-5 py-3 text-base bg-transparent border rounded-md outline-none border-stroke text-body-color dark:text-white dark:border-dark-3 focus:border-primary focus-visible:shadow-none" %>
            </div>
            <div class="mb-10">
            <%= f.submit "Create account", class: "bg-[#e31c51] hover:bg-[#df1761] hover:text-white block w-full h-12  text-base font-medium text-center transition border rounded-md border-stroke text-dark text-gray-200 cursor-pointer" %>
            </div>
            <% end %>
                
