
<div  data-controller="geolocation"
data-latitude="<%=current_user&.profile&.latitude %>"
data-longitude="<%= current_user&.profile&.longitude %>"
class="container mx-auto px-4 py-5 md:py-14 sm:py-14"
>
<ul role ="list" class="grid grid-cols-1 gap-y-8 md:grid-cols-3 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
<% @properties.each do |p| %>
<li class="relative"
data-geolocation-target="property"
data-latitude="<%= p.latitude %>"
data-longitude="<%= p.longitude%>"
>
<div class="group block w-full aspect-w-7 aspect-h-7 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 hover:opacity-75">
<%= image_tag p.images.first, class:"object-cover rounded-lg m-w-full" %>
<button type="button" class="absolute inset-0 focus:outline-none">
<span class="sr-only">View image details</span>
</button>
</div>
<p class="mt-t block text-sm font-medium text-gray-900 truncate pointer-events-none"><p><%= p.address_info %></p>
</p>


<p class="mt-t block text-sm font-medium text-gray-900 pointer-events-none">
<%=p.average_rating.round(2) %>
<%= heroicon "star", options:{class: "h-4 relative cursor-pointer inline-block", style:"bottom:2px;"} %>
</p>
<p data-distance-away class="mt-t block text-sm font-medium text-gray-500 pointer-events-none"></p>
<p class="mt-t block text-sm font-medium text-gray-500 pointer-events-none">Aug 04-10</p>
<p class="mt-t block text-sm font-medium text-gray-900 pointer-events-none"><%= humanized_money_with_symbol(p.price) %> night</p>
</li>
<% end %>
</ul>
</div